<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_home_top"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="map"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_top"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_home_content"
        app:layout_constraintTop_toBottomOf="@id/iv_top"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_un_connect_layout"
        android:layout_width="180dp"
        android:layout_height="230dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/icon_center_un_connect"
        app:layout_constraintBottom_toTopOf="@id/iv_connect_btn" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/connecting_lottie_view"
        android:layout_width="180dp"
        android:layout_height="230dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:lottie_fileName="connect.zip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_connect_btn" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_connected_layout"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_connect_btn">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="180dp"
            android:layout_height="230dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/icon_center_connected" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_center_flag"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/icon_flag_default_circle"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_center_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="42dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_server_info_layout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/bg_412172_12dp_solid"
        app:layout_constraintBottom_toTopOf="@id/ad_layout"
        app:layout_constraintRight_toLeftOf="@id/iv_connect_btn">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_server_info_flag"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/icon_flag_default_circle"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_server_info_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:text="Super Fast Server"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/icon_right2" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_btn"
        android:layout_width="118dp"
        android:layout_height="60dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon_connect_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ad_layout"
        app:layout_constraintLeft_toRightOf="@id/ll_server_info_layout" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_status"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/icon_idle"
        app:layout_constraintTop_toTopOf="@id/iv_connect_btn"
        app:layout_constraintLeft_toLeftOf="@id/iv_connect_btn"
        app:layout_constraintRight_toRightOf="@id/iv_connect_btn"
        app:layout_constraintBottom_toBottomOf="@id/iv_connect_btn"
        />
    <View
        android:id="@+id/ad_layout"
        android:layout_width="match_parent"
        android:layout_height="243dp"

        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>