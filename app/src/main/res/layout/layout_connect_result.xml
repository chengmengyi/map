<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_connect_result_selector">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/icon_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_view"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_status"
        android:layout_width="64dp"
        android:layout_height="78dp"
        android:layout_marginTop="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        android:src="@drawable/connect_result_logo_selector"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_connect_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Disconnectedï¼"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_connect_status"/>
    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#241044"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_status_text"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_ffffff_8dp_solid"
        app:layout_constraintTop_toTopOf="@id/bottom_view">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_server_flag"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/icon_flag_default"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_server_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="United States"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_333333"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_connect_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="00:00:00"
            android:textStyle="bold"
            android:layout_marginRight="12dp"
            android:textColor="@drawable/connect_result_text_color_selector"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <include
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        layout="@layout/layout_native_ad"
        app:layout_constraintTop_toBottomOf="@id/ll_info"/>
</androidx.constraintlayout.widget.ConstraintLayout>